@model ContactViewModel
@{
    ViewBag.Title = "Contact Us";
}
@section Scripts {
    <script src="~/node_modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/node_modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}

<div class="col-md-6 offset-md-3">
    <div class="card card-body bg-light">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>

            <div class="form-group">
                <label asp-for="Name">Your Name: </label>
                <input class="form-control" asp-for="Name" />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email">Email: </label>
                <input class="form-control" asp-for="Email" type="email" />
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subject">Subject: </label>
                <input class="form-control" asp-for="Subject" type="text" />
                <span class="text-danger" asp-validation-for="Subject"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message">Message: </label>
                <textarea class="form-control" asp-for="Message" rows="4"></textarea>
                <span class="text-danger" asp-validation-for="Message"></span>
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-md" type="submit"><i class="fa fa-envelope"></i> Send Message</button>
                @*<input class="btn btn-primary" type="submit" value="Send Message" />*@
                <div class="text-success">@ViewBag.UserMessage</div>
            </div>

        </form>
    </div>
</div>